{
  "name": "@giogaspa/fastify-multitenant",
  "version": "0.1.0",
  "description": "Fastify plugin for multitenancy",
  "author": "Gioacchino Gasparella",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giogaspa/fastify-multitenant.git"
  },
  "keywords": [
    "fastify",
    "multi-tenant"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["/dist"],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint && npm run unit && npm run test:typescript",
    "build": "tsc -p tsconfig.json",
    "build:local": "npm isntall && tsc -p tsconfig.json && rm -rf node_modules",
    "lint": "standard && npm run lint:typescript",
    "lint:typescript": "ts-standard",
    "test:typescript": "tsd",
    "unit": "tap \"test/**/*.test.js\""
  },
  "dependencies": {
    "fastify-plugin": "^4.5.0",
    "nanoid": "3.3.4",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "fastify": "^4.17.0",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.10.1",
    "fastify-tsconfig": "^1.0.1",
    "standard": "^17.0.0",
    "tap": "^16.1.0",
    "ts-standard": "^12.0.1",
    "tsd": "^0.16.0",
    "typescript": "^4.5.4"
  },
  "tsd": {
    "directory": "test"
  }
}
