{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "ES2017",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "strict": true,
      "noEmitOnError": true,
    },
    "include": [
      "./src/**/*.ts",
      "./cli/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
